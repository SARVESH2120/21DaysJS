innerText modifies a value;;


--On wikipedia page

document.querySelectorAll('h3');
let h3 = document.querySelectorAll('h3');
Array.from(h3);
let con = Array.from(h3);
con.forEach((item)=> item.style.color ="red");
con.forEach((item)=> item.style.backgroundColor ="yellow");
con.forEach((item)=> item.innerText ="Sarvesh");



