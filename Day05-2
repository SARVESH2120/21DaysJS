                                                                    Scope
console.log(addOne(5));
function addOne(num){
    return num+1;
}


const two = function(num){
return num+2;
}
console.log(two(5));                     if it goes above then it shows error



                                                              Arrow Function
//this refers to the current context

const user = {
    username :"Sarvesh",
    price: 99,

    welcomeMsg: function(){
        console.log(`${this.username} , welcome to website ${this.price}`)
    }
}
user.welcomeMsg()

//diff between function and arrow function

const add =(num1, num2) =>  num1 + num2;
console.log(add(9,8));

const sub =(num1, num2) => (num1 + num2);
console.log(sub(10,12));

const mul = (num1, num2) => {
    return num1 * num2;
}
console.log(mul(7,2));




